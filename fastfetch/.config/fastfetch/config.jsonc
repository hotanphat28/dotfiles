{
	"$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
	"logo": {
		"source": "~/.config/fastfetch/traffic_light_pole.txt",
		"type": "file",
		"color": {
			"1": "#F4F4F4",
			"2": "#ED1C24",
			"3": "#FFC90E",
			"4": "#22B14C"
		},
		"padding": {
			"top": 0,
			"left": 10,
			"right": 10
		}
	},
	"display": {
		"separator": ": ", // Separator between keys and values
		"color": {
			"keys": "#FFC90E", // Key color
			"title": "#FFC90E" // Title color
		}
	},
	"modules": [
		{
			"type": "title"
		},
		// :::: Separator ::::
		{
			"type": "custom",
			"format": "::::::::::::::::::::::::::::::",
			"outputColor": "#646464" // Color 5
		},
		// :::: Software ::::
		{
			"type": "uptime",
			"key": ":. up "
		},
		{
			"type": "os",
			"key": ":. os "
		},
		{
			"type": "kernel",
			"key": ":. kernel "
		},
		{
			"type": "packages",
			"key": ":. packages "
		},
		{
			"type": "shell",
			"key": ":. shell "
		},
		{
			"type": "de",
			"key": ":. de "
		},
		{
			"type": "wm",
			"key": ":. wm "
		},
		// :::: Separator ::::
		{
			"type": "custom",
			"format": "::::::::::::::::::::::::::::::",
			"outputColor": "646464"
		},
		// :::: Hardware ::::
		{
			"type": "cpu",
			"key": ":. cpu "
		},
		{
			"type": "gpu",
			"key": ":. gpu "
		},
		{
			"type": "memory",
			"key": ":. memory "
		},
		{
			"type": "display",
			"key": ":. display "
		},
		{
			"type": "disk",
			"key": ":. disk ",
			"format": "[{mountpoint}] - {size-used} / {size-total} ({size-percentage})"
		},
		// ::::: Separator :::::
		{
			"type": "custom",
			"format": "::::::::::::::::::::::::::::::",
			"outputColor": "646464"
		},
		// ::::: Brand Footer ::::
		{
			"type": "custom",
			// Truecolor ANSI Format: \u001b[38;2;R;G;Bm
			// 1. Golden     (#FFC90E) -> 255;201;14
			// 2. White      (#FFFFFF) -> 255;255;255
			// 3. Light      (#F4F4F4) -> 244;244;244
			// 4. Light-Gray (#D6D6D6) -> 214;214;214
			// 5. Dark-Gray  (#646464) -> 100;100;100
			// 6. Dark       (#282828) -> 40;40;40
			// 7. Black      (#101010) -> 16;16;16
			"format": "\u001b[38;2;255;255;255m● \u001b[38;2;244;244;244m● \u001b[38;2;214;214;214m● \u001b[38;2;100;100;100m● \u001b[38;2;40;40;40m● \u001b[38;2;16;16;16m● \u001b[38;2;255;201;14m●"
		},
		"break"
	]
}
